# PostgreSQL Database Configuration
# ⚠️ IMPORTANTE: Configure estas variáveis no arquivo .env com seus valores reais!
# Use senhas fortes (mínimo 12 caracteres) em produção
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=company_hub
POSTGRES_PORT=5430

# Backend Configuration
PORT=3001
BACKEND_PORT=3001
NODE_ENV=production

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# Database URL (automatically used by Prisma)
# ⚠️ IMPORTANTE: Configure com seus valores reais no arquivo .env!
# Formato: postgresql://USER:PASSWORD@postgres:5432/DATABASE
DATABASE_URL=

# JWT Configuration
# ⚠️ IMPORTANTE: Use uma chave secreta forte em produção (mínimo 32 caracteres aleatórios)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1d

