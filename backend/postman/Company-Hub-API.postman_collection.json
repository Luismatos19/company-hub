    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    // Cookie httpOnly será salvo automaticamente pelo Postman (cookie jar).",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData && jsonData.data && jsonData.data.id) {",
                  "        pm.collectionVariables.set('user_id', jsonData.data.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{$randomEmail}}\",\n  \"password\": \"pass{{$randomInt}}{{$timestamp}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Autentica um usuário. O JWT é salvo como cookie httpOnly (access_token)."
          },
          "response": []
        }
      ]
    },
