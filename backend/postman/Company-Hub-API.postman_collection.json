    {
      "name": "Invites",
      "item": [
        {
          "name": "Create Invite",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Gerar data futura (30 dias a partir de agora)",
                  "const futureDate = new Date();",
                  "futureDate.setDate(futureDate.getDate() + 30);",
                  "pm.collectionVariables.set('invite_expires_at', futureDate.toISOString());"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.id) {",
                  "        pm.collectionVariables.set('invite_id', jsonData.data.id);",
                  "        pm.collectionVariables.set('invite_token', jsonData.data.token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{$randomEmail}}\",\n  \"companyId\": \"{{company_id}}\",\n  \"expiresAt\": \"{{invite_expires_at}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/invites",
              "host": ["{{base_url}}"],
              "path": ["invites"]
            },
            "description": "Cria um novo convite para uma empresa (expiresAt deve ser uma data futura no formato ISO)"
          },
          "response": []
        },
